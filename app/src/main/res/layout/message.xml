<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/userLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_avatar_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/iconfinder_man_196742" />

            <TextView
                android:id="@+id/txv_msg_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/img_avatar_user"
                android:background="@mipmap/bubble_user"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingRight="36dp"
                android:text="10"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txv_msg_user"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:text="送出" />

            <TextView
                android:id="@+id/txv_time_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txv_msg_user"
                android:layout_toLeftOf="@id/textView3" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/otherUserLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/iconfinder_man_196742" />

                <TextView
                    android:id="@+id/txv_user_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"

                    android:layout_toRightOf="@id/img_avatar"
                    android:text="name"
                    android:textColor="@color/fui_linkColor"
                    android:textStyle="normal|bold" />


                <TextView
                    android:id="@+id/txv_msg_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_user_other"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/img_avatar"
                    android:background="@mipmap/bubble_system"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="10dp"
                    android:text="messagemessagemessage"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/txv_msg_other"
                    android:layout_toRightOf="@id/txv_msg_other"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_time_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="送出" />
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>